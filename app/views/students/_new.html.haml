
- content_for(:title, 'Create New Student')
- content_for(:page_name, 'Create New Student')
- content_for(:page_class, 'misc')

/ Header
.header-block
  .row
    .col-sm-1
    .col-sm-10
      %h1.h3.page-title.text-center
        %strong='Student Maintenance'
      %h2.h1.page-title.text-center
        %strong='Create New Student'
    .col-sm-1

.row
  .col-sm-1
  .col-sm-10
    .block.block-alt-style.full
      .block-title.text-center
        %h2
          =@student.full_name
      .block-content-full
        =form_for(@student, url: create_student_create_users_path, remote: true) do |f|
          - @errors = @student.errors
          .page-form.alternate-highlight
            = render 'students/form'
            %fieldset.text-center
              %button.btn.btn-default{"data-dismiss" => "modal", type: "button"}='Cancel'
              %button.btn.btn-primary{name: 'commit', type: "submit"}='Save'
  .col-sm-1
