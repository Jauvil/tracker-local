
- content_for(:title, 'Edit System User')
- content_for(:page_name, 'Edit System User')
- content_for(:page_class, 'misc')

/ Header
.header-block
  .row
    .col-sm-1
    .col-sm-10
      %h1.h3.page-title.text-center
        %strong='System Maintenance'
      %h2.h1.page-title.text-center
        %strong='Edit System User'
    .col-sm-1

.row
  .col-sm-1
  .col-sm-10
    .block.block-alt-style.full
      .block-title.text-center
        %h2
          =@user.full_name
      .block-content-full
        =form_for(@user, url: url_for(controller: 'system_administrators', action: 'update_system_user'), remote: true) do |f|
          - @errors = @user.errors
          = render 'form'
  .col-sm-1
