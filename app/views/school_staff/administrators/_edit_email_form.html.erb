<%= form_for(user, url: update_user_email_school_staff_administrator_path(current_user), method: :put) do |f| %>
  <div class="form-group">
    <label>
      Email
    </label>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <input type="hidden" id="user[id]" name="user[id]" value="<%= user.id %>">
  <div class="form-group">
    <label for="user[email_confirmation]">
      Confirm email
    </label>
    <input id="user[email_confirmation]" name="user[email_confirmation]" type="text" class="form-control">
  </div>
  <div class="form-group">
    <%= f.submit 'Update Email', class: 'btn btn-success' %>
  </div>
<% end %>